<html>
    <head>
        <title>Register Form</title>
        <link rel="stylesheet" type="text/css" href="style.css"/>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <div class="registerform" id="outerEntry">
            <h5>Sign up now!</h5>
            <div id="entryDiv">
                <input name ="firstNameEntry" id='firstNameEntry' type='text' placeholder='First Name' value=''/><br>
                <input name ="lastNameEntry" id='lastNameEntry' type='text' placeholder='Last Name' value=''/><br>
                <input name ="emailEntry"id='emailEntry' type='text' placeholder='Email' value=''/><br>
                <input name ="addressEntry" id='addressEntry' type='text' placeholder='Address' value=''/><br>
                <input name ="zipEntry" id='zipEntry' type='text' placeholder='Zip Code' value=''/><br>
                <input name ="stateEntry" id='stateEntry' type='text' placeholder='State' value=''/><br>
                <input name ="userName" id='userName' type='text' placeholder='User Name' value=''/><br>
                <input name ="pwBar1" id='pwBar1' type='password' placeholder='Password' value=''/><br>
                <input name ="pwBar2" id='pwBar2' type='password' placeholder='Confirm Password' value=''/><br>
                <div id="invalidDiv" style="white-space: pre; color: red; margin-bottom: 10px;"></div>
                <input name ="submitBtn" id='submitBtn' type='submit' value='Register'/><br>
            
                <p><a href="/login">Sign-in</a> if you already have an account.</p>
              </div>
        </div>
        <div id="showUser" style="display:none">
          <h5 id="showName">Welcome, {{this.firstName}}!</h5>
          <button><a href="/home">Continue to Home Page</a></button>
        </div>
        <script src="newLogin.js"></script>
    </body>
</html>
