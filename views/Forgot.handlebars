<html>
    <head>
        <title>We are Sorry</title>
        <link rel="stylesheet" type="text/css" href="style.css" />
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <div class="LogIn" style="position: absolute; left: 480px">
            <div id="createAccountNotification"></div>
            <div id="userNameDisplay"></div>
            <div style="background-color: rgba(360, 360, 360, 0.6); margin-left: 40px; margin-right: 40px">
                <h3>Welcome {{userName}}. This page is not yet complete. </h3>

            <form action="/editAccount" method="get" id="attemptLogin">
                <input type="submit" value="Edit Account Info"/>
            </form><br>
        
            <form action="/searchPage" method="get" id="searchPage">
                <input type="submit" value="Search For Procedure"/>
            </form><br>
            </div>
        </div>
      
     <script>

            var userId = this.document.cookie;
            var submitBtn = document.getElementById("editInfo");

            submitBtn.addEventListener("click", function (event, context) {
                var reqBody = {
                    'userId': userId
                };
                var req = new XMLHttpRequest();
                req.open('POST', '/editAccount', true);
                req.setRequestHeader('Content-Type', 'application/json');
                reqBody = JSON.stringify(reqBody);

                req.send(reqBody);
            });

     </script>
    </body>
    
</html>
